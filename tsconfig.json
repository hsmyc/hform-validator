{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "removeComments": false
  },
  "include": ["src/**/*", "__tests__/index.test.ts", "src/types/types.d.ts"],
  "exclude": ["node_modules", "dist", "lib", "**/*.spec.ts", "build"]
}
