{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "noImplicitAny": true,
    "module": "ES2022",
    "target": "ES2022",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "src/__tests__/validator.test.js"],
  "exclude": ["node_modules", "dist", "lib", "**/*.spec.ts", "build"]
}
